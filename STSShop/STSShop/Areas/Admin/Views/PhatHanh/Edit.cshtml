@model Models.EF.PhatHanh
@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    
    function changecost() {
        var soluong = document.getElementById("soluongban").value;
        var doanhthuphathanh = parseInt(parseInt(soluong) * 10000);
        document.getElementById("doanhthuph").value = doanhthuphathanh;

        var hoahong1 = document.getElementById("hoahong").value;
        if (hoahong1 != null) {
            
            var tileconlai = parseInt(100 - parseInt(hoahong1));
            var tienthanhtoanint = parseFloat((parseInt(tileconlai) * parseInt(doanhthuphathanh)) / 100);
            document.getElementById("tienthanhtoan").value = tienthanhtoanint;
        }
    }
    function changecost1() {
        var hoahong1 = document.getElementById("hoahong").value;
        var soluong = document.getElementById("soluongban").value;
        var doanhthuphathanh = parseInt(parseInt(soluong) * 10000);
        document.getElementById("doanhthuph").value = doanhthuphathanh;

        
        if (hoahong1 != null) {

            var tileconlai = parseInt(100 - parseInt(hoahong1));
            var tienthanhtoanint = parseFloat((parseInt(tileconlai) * parseInt(doanhthuphathanh)) / 100);
            document.getElementById("tienthanhtoan").value = tienthanhtoanint;
        }
    }
</script>



